.mcqBox.gitQuestion(id=question.id, data-config=JSON.stringify(question), data-id=question.id)
	.container-fluid
		.MCQtitle!=question.title
		
		blockquote
			p.hint_message
			-var alphabet = ['1', '2', '3', '4', '5', '6', '7', '8']
			-for(var i=0; i<question.count; i++)
				label.radio-inline
					input(name=question.id+"_group", type="radio")
					b #{alphabet[i]}. 
					.MCQoption(class='ansHere'+i)
				br

			.MCQbutton
				button.btn.btn-default.btn-sm.submitMCQ 제출
				-if(question.hint)
					button.btn.btn-default.btn-sm.hintMCQ 힌트

		.alert.MCQmessage
		.MCQdescription
